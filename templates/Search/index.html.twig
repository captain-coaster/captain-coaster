{% extends "base.html.twig" %}

{% set title = '"' ~ query ~ '"'|default('search_index.noTerm'|trans()) %}
{% set subTitle = 'search_index.title'|trans %}
{% block title %}{{ title }} â€¢ {{ subTitle }}{% endblock %}

{% block body %}
    {% if query|length < 2 %}
        <ul class="media-list content-group">
            <li class="media panel panel-body">
                {{ 'search_index.short'|trans() }}
            </li>
        </ul>
    {% elseif error is defined %}
        <ul class="media-list content-group">
            <li class="media panel panel-body">
                <div class="text-center text-muted">
                    {{ heroicon('exclamation-triangle', 'w-8 h-8') }}
                    <p class="mt-10">{{ error }}</p>
                </div>
            </li>
        </ul>
    {% elseif results is empty %}
        <ul class="media-list content-group">
            <li class="media panel panel-body">
                <div class="text-center text-muted">
                    {{ heroicon('magnifying-glass', 'w-8 h-8') }}
                    <p class="mt-10">{{ 'search_index.noResult'|trans() }}</p>
                </div>
            </li>
        </ul>
    {% else %}
        <div class="panel panel-white" data-controller="search-results">
            <div class="panel-heading">
                <h6 class="panel-title text-semibold">
                    {{ 'search_index.unified_results_found'|trans({'%num%': totalResults, '%query%': query}) }}
                </h6>
            </div>

            <div class="search-results-container">
                {% for result in results %}
                    <div class="search-result-item search-result-item-page" 
                         data-search-results-target="resultItem"
                         data-action="click->search-results#selectResult"
                         data-type="{{ result.entity_type }}" 
                         data-id="{{ result.id }}" 
                         data-slug="{{ result.slug }}">
                        
                        <div class="search-result-emoji">{{ result.emoji }}</div>
                        
                        <div class="search-result-content">
                            <div class="search-result-name">{{ result.name }}</div>
                            {% if result.subtitle %}
                                <div class="search-result-subtitle">
                                    {% if result.entity_type == 'park' and result.subtitle starts with 'country.' %}
                                        {{ result.subtitle|trans({}, 'database') }}
                                    {% else %}
                                        {{ result.subtitle }}
                                    {% endif %}
                                </div>
                            {% endif %}
                        </div>
                        
                        {% if result.entity_type == 'coaster' and result.image %}
                            <div class="search-result-image">
                                <img src="{{ pictures_cdn }}/280x210/{{ result.image }}" 
                                     alt="{{ result.name }}"
                                     loading="lazy">
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>

        {% if pagination and pagination.total > 1 %}
            <div class="text-center">
                <ul class="pagination pagination-sm">
                    {% if pagination.has_previous %}
                        <li>
                            <a href="{{ path('search_index', {'query': query, 'page': pagination.previous}) }}" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    {% endif %}

                    {% set start_page = max(1, pagination.current - 2) %}
                    {% set end_page = min(pagination.total, pagination.current + 2) %}

                    {% if start_page > 1 %}
                        <li><a href="{{ path('search_index', {'query': query, 'page': 1}) }}">1</a></li>
                        {% if start_page > 2 %}
                            <li class="disabled"><span>...</span></li>
                        {% endif %}
                    {% endif %}

                    {% for page in start_page..end_page %}
                        <li{% if page == pagination.current %} class="active"{% endif %}>
                            <a href="{{ path('search_index', {'query': query, 'page': page}) }}">{{ page }}</a>
                        </li>
                    {% endfor %}

                    {% if end_page < pagination.total %}
                        {% if end_page < pagination.total - 1 %}
                            <li class="disabled"><span>...</span></li>
                        {% endif %}
                        <li><a href="{{ path('search_index', {'query': query, 'page': pagination.total}) }}">{{ pagination.total }}</a></li>
                    {% endif %}

                    {% if pagination.has_next %}
                        <li>
                            <a href="{{ path('search_index', {'query': query, 'page': pagination.next}) }}" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        {% endif %}
    {% endif %}
{% endblock %}
