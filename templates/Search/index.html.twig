{% extends "layouts/base.html.twig" %}

{% set title = '"' ~ query ~ '"'|default('search_index.noTerm'|trans()) %}
{% set subTitle = 'search_index.title'|trans %}
{% block title %}{{ title }} â€¢ {{ subTitle }}{% endblock %}

{% block body %}
    {% if query|length < 2 %}
        <section class="bg-white dark:bg-neutral-900 rounded-2xl overflow-hidden shadow-sm">
            <div class="empty-state">
                <div class="empty-state-icon">
                    {{ ux_icon('tabler:search', {'class': 'w-8 h-8 text-neutral-400', 'aria-hidden': 'true'}) }}
                </div>
                <p class="text-neutral-600 dark:text-neutral-400">{{ 'search_index.short'|trans() }}</p>
            </div>
        </section>
    {% elseif error is defined %}
        <section class="bg-white dark:bg-neutral-900 rounded-2xl overflow-hidden shadow-sm">
            <div class="empty-state">
                <div class="empty-state-icon">
                    {{ ux_icon('tabler:alert-triangle', {'class': 'w-8 h-8 text-red-500', 'aria-hidden': 'true'}) }}
                </div>
                <p class="text-red-600 dark:text-red-400">{{ error }}</p>
            </div>
        </section>
    {% elseif results is empty %}
        <section class="bg-white dark:bg-neutral-900 rounded-2xl overflow-hidden shadow-sm">
            <div class="empty-state">
                <div class="empty-state-icon">
                    {{ ux_icon('tabler:search', {'class': 'w-8 h-8 text-neutral-400', 'aria-hidden': 'true'}) }}
                </div>
                <p class="text-neutral-600 dark:text-neutral-400">{{ 'search_index.noResult'|trans() }}</p>
            </div>
        </section>
    {% else %}
        <section class="bg-white dark:bg-neutral-900 rounded-2xl overflow-hidden shadow-sm" data-controller="search-results">
            <div class="px-6 py-4 bg-neutral-50 dark:bg-neutral-800 border-b border-neutral-100 dark:border-neutral-700">
                <h1 class="text-lg font-semibold text-neutral-900 dark:text-white">
                    {{ 'search_index.unified_results_found'|trans({'%num%': totalResults, '%query%': query}) }}
                </h1>
            </div>

            <div class="search-results-container">
                {% for result in results %}
                    <div class="search-result-item search-result-item-page" 
                         data-search-results-target="resultItem"
                         data-action="click->search-results#selectResult"
                         data-type="{{ result.entity_type }}" 
                         data-id="{{ result.id }}" 
                         data-slug="{{ result.slug }}">
                        
                        <div class="search-result-emoji">{{ result.emoji }}</div>
                        
                        <div class="flex-1 min-w-0">
                            <div class="text-base font-semibold text-neutral-900 dark:text-white mb-1 truncate">{{ result.name }}</div>
                            {% if result.subtitle %}
                                <div class="text-sm text-neutral-600 dark:text-neutral-400 truncate">
                                    {% if result.entity_type == 'park' and result.subtitle starts with 'country.' %}
                                        {{ result.subtitle|trans({}, 'database') }}
                                    {% else %}
                                        {{ result.subtitle }}
                                    {% endif %}
                                </div>
                            {% endif %}
                        </div>
                        
                        {% if result.entity_type == 'coaster' and result.image %}
                            <div class="shrink-0 w-24 h-18 rounded-lg overflow-hidden">
                                <img class="w-full h-full object-cover"
                                     src="{{ pictures_cdn }}/280x210/{{ result.image }}" 
                                     alt="{{ result.name }}"
                                     loading="lazy">
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </section>

        {% if pagination and pagination.total > 1 %}
            <nav class="mt-6" aria-label="Search pagination">
                <ul class="flex items-center justify-center gap-1">
                    {% if pagination.has_previous %}
                        <li>
                            <a class="inline-flex items-center justify-center w-10 h-10 rounded-lg text-neutral-700 dark:text-neutral-300 hover:bg-neutral-100 dark:hover:bg-neutral-800 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-cc-blue-500" 
                               href="{{ path('search_index', {'query': query, 'page': pagination.previous}) }}" 
                               aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    {% else %}
                        <li>
                            <span class="inline-flex items-center justify-center w-10 h-10 rounded-lg text-neutral-400 dark:text-neutral-600 cursor-not-allowed">&laquo;</span>
                        </li>
                    {% endif %}

                    {% set start_page = max(1, pagination.current - 2) %}
                    {% set end_page = min(pagination.total, pagination.current + 2) %}

                    {% if start_page > 1 %}
                        <li>
                            <a class="inline-flex items-center justify-center w-10 h-10 rounded-lg text-neutral-700 dark:text-neutral-300 hover:bg-neutral-100 dark:hover:bg-neutral-800 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-cc-blue-500" 
                               href="{{ path('search_index', {'query': query, 'page': 1}) }}">1</a>
                        </li>
                        {% if start_page > 2 %}
                            <li><span class="inline-flex items-center justify-center w-10 h-10 text-neutral-400">...</span></li>
                        {% endif %}
                    {% endif %}

                    {% for page in start_page..end_page %}
                        <li>
                            {% if page == pagination.current %}
                                <span class="inline-flex items-center justify-center w-10 h-10 rounded-lg bg-cc-blue-600 text-white font-medium">{{ page }}</span>
                            {% else %}
                                <a class="inline-flex items-center justify-center w-10 h-10 rounded-lg text-neutral-700 dark:text-neutral-300 hover:bg-neutral-100 dark:hover:bg-neutral-800 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-cc-blue-500" 
                                   href="{{ path('search_index', {'query': query, 'page': page}) }}">{{ page }}</a>
                            {% endif %}
                        </li>
                    {% endfor %}

                    {% if end_page < pagination.total %}
                        {% if end_page < pagination.total - 1 %}
                            <li><span class="inline-flex items-center justify-center w-10 h-10 text-neutral-400">...</span></li>
                        {% endif %}
                        <li>
                            <a class="inline-flex items-center justify-center w-10 h-10 rounded-lg text-neutral-700 dark:text-neutral-300 hover:bg-neutral-100 dark:hover:bg-neutral-800 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-cc-blue-500" 
                               href="{{ path('search_index', {'query': query, 'page': pagination.total}) }}">{{ pagination.total }}</a>
                        </li>
                    {% endif %}

                    {% if pagination.has_next %}
                        <li>
                            <a class="inline-flex items-center justify-center w-10 h-10 rounded-lg text-neutral-700 dark:text-neutral-300 hover:bg-neutral-100 dark:hover:bg-neutral-800 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-cc-blue-500" 
                               href="{{ path('search_index', {'query': query, 'page': pagination.next}) }}" 
                               aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    {% else %}
                        <li>
                            <span class="inline-flex items-center justify-center w-10 h-10 rounded-lg text-neutral-400 dark:text-neutral-600 cursor-not-allowed">&raquo;</span>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        {% endif %}
    {% endif %}
{% endblock %}
