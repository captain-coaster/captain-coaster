{% import "macros/_macros_helpers.html.twig" as helper %}

<nav class="bg-white dark:bg-neutral-900 rounded-2xl overflow-hidden shadow-sm mb-6" aria-label="{{ 'profile.menu.label'|trans }}">
    <div class="p-6 text-center border-b border-neutral-100 dark:border-neutral-800">
        <div class="inline-block mb-3">
            {{ helper.profilePicture(user, 'rounded-full w-20 h-20') }}
        </div>
        <h2 class="text-lg font-semibold text-neutral-900 dark:text-white">
            {{ user.displayName }}
        </h2>
    </div>

    <ul class="divide-y divide-neutral-100 dark:divide-neutral-800">
        <li>
            <a href="{{ path('profile') }}" class="flex items-center gap-3 px-6 py-3 text-neutral-700 dark:text-neutral-300 hover:bg-neutral-50 dark:hover:bg-neutral-800 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-cc-blue-500">
                {{ ux_icon('tabler:user', {'class': 'w-5 h-5 text-neutral-500 dark:text-neutral-400', 'aria-hidden': 'true'}) }}
                <span class="font-medium">{{ 'profile.title'|trans }}</span>
            </a>
        </li>
        <li>
            <a href="{{ path('profile_settings') }}" class="flex items-center gap-3 px-6 py-3 text-neutral-700 dark:text-neutral-300 hover:bg-neutral-50 dark:hover:bg-neutral-800 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-cc-blue-500">
                {{ ux_icon('tabler:settings', {'class': 'w-5 h-5 text-neutral-500 dark:text-neutral-400', 'aria-hidden': 'true'}) }}
                <span class="font-medium">{{ 'profile.settings.title'|trans }}</span>
            </a>
        </li>
        <li>
            <a href="{{ path('profile_ratings') }}" class="flex items-center justify-between px-6 py-3 text-neutral-700 dark:text-neutral-300 hover:bg-neutral-50 dark:hover:bg-neutral-800 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-cc-blue-500">
                <span class="flex items-center gap-3">
                    {{ ux_icon('tabler:star', {'class': 'w-5 h-5 text-neutral-500 dark:text-neutral-400', 'aria-hidden': 'true'}) }}
                    <span class="font-medium">{{ 'profile.menu.ratings'|trans }}</span>
                </span>
                <span class="badge-primary">{{ user.ratings|length }}</span>
            </a>
        </li>
        <li>
            <a href="{{ path('user_reviews', {'id': user.id}) }}" class="flex items-center gap-3 px-6 py-3 text-neutral-700 dark:text-neutral-300 hover:bg-neutral-50 dark:hover:bg-neutral-800 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-cc-blue-500">
                {{ ux_icon('tabler:speakerphone', {'class': 'w-5 h-5 text-neutral-500 dark:text-neutral-400', 'aria-hidden': 'true'}) }}
                <span class="font-medium">{{ 'profile.menu.reviews'|trans }}</span>
            </a>
        </li>
        <li>
            <a href="{{ path('user_tops', {'id': user.id}) }}" class="flex items-center gap-3 px-6 py-3 text-neutral-700 dark:text-neutral-300 hover:bg-neutral-50 dark:hover:bg-neutral-800 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-cc-blue-500">
                {{ ux_icon('tabler:clipboard', {'class': 'w-5 h-5 text-neutral-500 dark:text-neutral-400', 'aria-hidden': 'true'}) }}
                <span class="font-medium">{{ 'profile.menu.tops'|trans }}</span>
            </a>
        </li>
        {% if images_counter > 0 %}
            <li>
                <a href="{{ path('user_pictures', {'id': user.id}) }}" class="flex items-center justify-between px-6 py-3 text-neutral-700 dark:text-neutral-300 hover:bg-neutral-50 dark:hover:bg-neutral-800 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-cc-blue-500">
                    <span class="flex items-center gap-3">
                        {{ ux_icon('tabler:camera', {'class': 'w-5 h-5 text-neutral-500 dark:text-neutral-400', 'aria-hidden': 'true'}) }}
                        <span class="font-medium">{{ 'profile.menu.photos'|trans }}</span>
                    </span>
                    <span class="badge-primary">{{ images_counter }}</span>
                </a>
            </li>
        {% endif %}
        <li>
            <a href="{{ path('map_user', {'id': user.id}) }}" class="flex items-center gap-3 px-6 py-3 text-neutral-700 dark:text-neutral-300 hover:bg-neutral-50 dark:hover:bg-neutral-800 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-cc-blue-500">
                {{ ux_icon('tabler:map-pin', {'class': 'w-5 h-5 text-neutral-500 dark:text-neutral-400', 'aria-hidden': 'true'}) }}
                <span class="font-medium">{{ 'profile.menu.map'|trans }}</span>
            </a>
        </li>
    </ul>
</nav>
