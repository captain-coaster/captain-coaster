{% import "helper.html.twig" as helper %}

<div class="panel">
    <div class="panel-body text-center">
    <div class="display-inline-block">
        {{ helper.profilePicture(user) }}
    </div>
    <h6 class="text-semibold no-margin-bottom">
        {{ user.displayName }}
    </h6>
    </div>

    <div class="list-group no-border no-padding-top">
    <a href="{{ path('profile') }}" class="list-group-item">
        <i class="icon-user"></i>
        {{ 'profile.title'|trans }}
    </a>
    <a href="{{ path('profile_settings') }}" class="list-group-item">
        <i class="icon-cog"></i>
        {{ 'profile.settings.title'|trans }}
    </a>
    <a href="{{ path('profile_ratings') }}" class="list-group-item">
        <i class="icon-stars"></i>
        {{ 'profile.menu.ratings'|trans }}
        <span class="badge bg-teal-400 pull-right">{{ user.ratings|length }}</span>
    </a>
    <a href="{{ path('user_reviews', {'id': user.id}) }}" class="list-group-item">
        <i class="icon-megaphone"></i>
        {{ 'profile.menu.reviews'|trans }}
    </a>
    <a href="{{ path('user_tops', {'id': user.id}) }}" class="list-group-item">
        <i class="icon-clipboard3"></i>
        {{ 'profile.menu.tops'|trans }}
    </a>
    {% if images_counter > 0 %}
        <a href="{{ path('user_pictures', {'id': user.id}) }}" class="list-group-item">
        <i class="icon-camera"></i>
            {{ 'profile.menu.photos'|trans }}
            <span class="badge bg-teal-400 pull-right">{{ images_counter }}</span>
        </a>
    {% endif %}
    <a href="{{ path('map_user', {'id': user.id}) }}" class="list-group-item">
        <i class="icon-location3"></i>
        {{ 'profile.menu.map'|trans }}
    </a>
    </div>
</div>