{% set bannerUrl = pictures_cdn ~ '/banner/' ~ user.id ~ '.png' %}
<img
    src="{{ bannerUrl }}"
    alt="{{ user.displayName }} stats"
    class="w-full h-auto rounded-lg mb-4"
/>
<div class="flex flex-wrap justify-center gap-2">
  {% set bbcode = '[url='~ absolute_url(path('user_profile', {'id': user.id})) ~'][img]' ~ bannerUrl ~ '[/img][/url]' %}
  {% set htmlcode = '<a href="'~ absolute_url(path('user_profile', {'id': user.id})) ~'"><img src="' ~ bannerUrl ~ '"/></a>' %}
  <button onclick="copy(this);" class="inline-flex justify-center items-center px-4 py-2 border border-neutral-300 dark:border-neutral-600 text-sm font-medium rounded-lg shadow-sm text-neutral-700 dark:text-neutral-200 bg-white dark:bg-neutral-800 hover:bg-neutral-50 dark:hover:bg-neutral-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-cc-blue-500 transition-colors duration-200 gap-2" data-copy="{{ bbcode }}">
    {{ ux_icon('tabler:clipboard-copy', {'class': 'w-5 h-5', 'aria-hidden': 'true'}) }}
    {{ 'profile.banner.getbbcode'|trans }}
  </button>
  <button onclick="copy(this);" class="inline-flex justify-center items-center px-4 py-2 border border-neutral-300 dark:border-neutral-600 text-sm font-medium rounded-lg shadow-sm text-neutral-700 dark:text-neutral-200 bg-white dark:bg-neutral-800 hover:bg-neutral-50 dark:hover:bg-neutral-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-cc-blue-500 transition-colors duration-200 gap-2" data-copy="{{ htmlcode }}">
    {{ ux_icon('tabler:copy', {'class': 'w-5 h-5', 'aria-hidden': 'true'}) }}
    {{ 'profile.banner.gethtml'|trans }}
  </button>
</div>
<script type="application/javascript">
    function copy(element) {
        const el = document.createElement('textarea');
        el.value = element.dataset.copy;
        document.body.appendChild(el);
        el.select();
        document.execCommand('copy');
        document.body.removeChild(el);
    }
</script>
