{% if stats|length > 0 %}
    <h6 class="content-group text-semibold">
        {{ 'profile.stats.title'|trans }}
    </h6>

    <div class="row">
        <div class="col-sm-6 col-md-3">
            <div class="panel panel-body">
                <div class="media no-margin">
                    <div class="media-body">
                        <h3 class="no-margin text-semibold text-success-400">{{ stats.nb_coasters }}</h3>
                        <div class="text-uppercase text-size-mini text-muted">{{ 'profile.stats.ridden_coasters'|trans({'count': stats.nb_coasters}) }}</div>
                    </div>
                    <div class="media-right media-middle">
                        {{ ux_icon('heroicons:trophy', {'class': 'w-12 h-12 text-success-400 opacity-75'}) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-md-3">
            <div class="panel panel-body">
                <div class="media no-margin">
                    <div class="media-body">
                        <h3 class="no-margin text-semibold text-blue-400">{{ stats.nb_park }}</h3>
                        <div class="text-uppercase text-size-mini text-muted">{{ 'profile.stats.explored_parks'|trans({'count': stats.nb_park}) }}</div>
                    </div>
                    <div class="media-right media-middle">
                        {{ ux_icon('heroicons:map-pin', {'class': 'w-12 h-12 text-blue-400 opacity-75'}) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-md-3">
            <div class="panel panel-body">
                <div class="media no-margin">
                    <div class="media-body">
                        <h3 class="no-margin text-semibold text-indigo-400">{{ stats.nb_country }}</h3>
                        <div class="text-uppercase text-size-mini text-muted">{{ 'profile.stats.visited_countries'|trans({'count': stats.nb_country}) }}</div>
                    </div>
                    <div class="media-right media-middle">
                        {{ ux_icon('heroicons:globe-americas', {'class': 'w-12 h-12 text-indigo-400 opacity-75'}) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-md-3">
            <div class="panel panel-body">
                <div class="media no-margin">
                    <div class="media-body">
                        <h3 class="no-margin text-semibold text-teal-400">{{ (stats.top_100 * 100 / 100)|round }}/100</h3>
                        <div class="text-uppercase text-size-mini text-muted">
                            {{ 'profile.stats.world_top_100'|trans }}
                            <span class="tooltip ml-5" data-controller="tooltip">
                                {{ ux_icon('heroicons:information-circle', {'class': 'w-6 h-6 text-muted'}) }}
                                <div class="tooltip-content" data-tooltip-target="content">
                                    <div class="tooltip-arrow"></div>
                                    {{ 'profile.stats.operating_top_100'|trans({'coasters': (stats.top_100_operating * 100 / 100)|round}) }}
                                </div>
                            </span>
                        </div>
                    </div>
                    <div class="media-right media-middle">
                        {{ ux_icon('heroicons:trophy', {'class': 'w-12 h-12 text-teal-400 opacity-75'}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-4">
            <div class="panel panel-body">
                <div class="media no-margin">
                    <div class="media-body">
                        <h3 class="no-margin text-semibold text-warning-400">{{ stats.country.name|trans([], 'database') }}</h3>
                        <div class="text-uppercase text-size-mini text-muted">
                            {{ 'profile.stats.top_country'|trans }}
                            <span class="tooltip ml-5" data-controller="tooltip">
                                {{ ux_icon('heroicons:information-circle', {'class': 'w-6 h-6 text-muted'}) }}
                                <div class="tooltip-content" data-tooltip-target="content">
                                    <div class="tooltip-arrow"></div>
                                    {{ 'profile.stats.coaster_count'|trans({'count': stats.country.nb}) }}
                                </div>
                            </span>
                        </div>
                    </div>
                    <div class="media-right media-middle">
                        {{ ux_icon('heroicons:flag', {'class': 'w-12 h-12 text-warning-400 opacity-75'}) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-4">
            <div class="panel panel-body">
                <div class="media no-margin">
                    <div class="media-body">
                        <h3 class="no-margin text-semibold text-pink-400">{{ stats.manufacturer.name }}</h3>
                        <div class="text-uppercase text-size-mini text-muted">
                            {{ 'profile.stats.top_manufacturer'|trans }}
                            <span class="tooltip ml-5" data-controller="tooltip">
                                {{ ux_icon('heroicons:information-circle', {'class': 'w-6 h-6 text-muted'}) }}
                                <div class="tooltip-content" data-tooltip-target="content">
                                    <div class="tooltip-arrow"></div>
                                    {{ 'profile.stats.coaster_count'|trans({'count': stats.manufacturer.nb}) }}
                                </div>
                            </span>
                        </div>
                    </div>
                    <div class="media-right media-middle">
                        {{ ux_icon('heroicons:cog-8-tooth', {'class': 'w-12 h-12 text-pink-400 opacity-75'}) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-4">
            <div class="panel panel-body">
                <div class="media no-margin">
                    <div class="media-body">
                        <h3 class="no-margin text-semibold text-orange-400">{{ stats.top_rated_manufacturer.name }}</h3>
                        <div class="text-uppercase text-size-mini text-muted">
                            {{ 'profile.stats.favorite_manufacturer'|trans }}
                            <span class="tooltip ml-5" data-controller="tooltip">
                                {{ ux_icon('heroicons:information-circle', {'class': 'w-6 h-6 text-muted'}) }}
                                <div class="tooltip-content" data-tooltip-target="content">
                                    <div class="tooltip-arrow"></div>
                                    {{ 'profile.stats.represented_manufacturer'|trans }}{% if stats.top_rated_manufacturer.nb > 0 %} ({{ stats.top_rated_manufacturer.nb }}){% endif %}
                                </div>
                            </span>
                        </div>
                    </div>
                    <div class="media-right media-middle">
                        {{ ux_icon('heroicons:heart', {'class': 'w-12 h-12 text-orange-400 opacity-75'}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endif %}
