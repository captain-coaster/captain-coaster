<div class="sidebar sidebar-main sidebar-fixed">
  <div class="sidebar-content">
    <!-- Main navigation -->
    <div class="sidebar-category sidebar-category-visible">
      <div class="category-content no-padding">
        <ul class="navigation navigation-main navigation-accordion">
          <!-- Main -->
          {% set currentRoute = app.request.attributes.get('_route') %}
          <li{% if currentRoute == 'default_index' %} class="active"{% endif %}>
            <a href="{{ path('default_index') }}">
              {{ ux_icon('heroicons:home', {'class': 'w-6 h-6'}) }} <span>{{ 'sidebar.index'|trans }}</span>
            </a>
          </li>
          <li{% if currentRoute == 'ranking_index' %} class="active"{% endif %}>
            <a href="{{ path('ranking_index') }}">
              {{ ux_icon('heroicons:trophy', {'class': 'w-6 h-6'}) }} <span>{{ 'sidebar.ranking'|trans }}</span>
            </a>
          </li>
          <li{% if currentRoute == 'coaster_search_index' %} class="active"{% endif %}>
            <a href="{{ path('coaster_search_index') }}">
              {{ ux_icon('heroicons:magnifying-glass', {'class': 'w-6 h-6'}) }} <span>{{ 'sidebar.search'|trans }}</span>
            </a>
          </li>
          <li{% if currentRoute == 'map_index' %} class="active"{% endif %}>
            <a href="{{ path('map_index') }}">
              {{ ux_icon('heroicons:map-pin', {'class': 'w-6 h-6'}) }} <span>{{ 'sidebar.map'|trans }}</span>
            </a>
          </li>
          <li{% if currentRoute == 'top_list' %} class="active"{% endif %}>
            <a href="{{ path('top_list') }}">
              {{ ux_icon('heroicons:clipboard', {'class': 'w-6 h-6'}) }} <span>{{ 'sidebar.top'|trans }}</span>
            </a>
          </li>
          <li{% if currentRoute == 'review_list' %} class="active"{% endif %}>
            <a href="{{ path('review_list') }}">
              {{ ux_icon('heroicons:chat-bubble-bottom-center-text', {'class': 'w-6 h-6'}) }} <span>{{ 'sidebar.review'|trans }}</span>
            </a>
          </li>
          <li{% if currentRoute == 'user_list' %} class="active"{% endif %}>
            <a href="{{ path('user_list') }}">
              {{ ux_icon('heroicons:users', {'class': 'w-6 h-6'}) }} <span>{{ 'sidebar.users'|trans }}</span>
            </a>
          </li>
          <li>
            <a href="https://blog.captaincoaster.com" target="_blank">
              {{ ux_icon('heroicons:newspaper', {'class': 'w-6 h-6'}) }} <span>{{ 'sidebar.blog'|trans }} <span style="font-size: 12px;">{{ ux_icon('heroicons:arrow-top-right-on-square', {'class': 'w-6 h-6'}) }}</span></span>
            </a>
          </li>
          <li{% if currentRoute == 'default_contact' %} class="active"{% endif %}>
            <a href="{{ path('default_contact') }}">
              {{ ux_icon('heroicons:envelope', {'class': 'w-6 h-6'}) }} <span>{{ 'sidebar.contact'|trans }}</span>
            </a>
          </li>
          <li>
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
              <a href="{{ path('logout') }}">
                {{ ux_icon('heroicons:arrow-right-on-rectangle', {'class': 'w-6 h-6'}) }} <span>{{ 'sidebar.logout'|trans }}</span>
              </a>
            {% else %}
              <a href="{{ path('login') }}">
                {{ ux_icon('heroicons:key', {'class': 'w-6 h-6'}) }} <span>{{ 'sidebar.login'|trans }}</span>
              </a>
            {% endif %}
          </li>
        </ul>
      </div>
    </div>
    <!-- /main navigation -->
  </div>
</div>
