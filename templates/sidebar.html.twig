<div class="sidebar sidebar-main sidebar-fixed">
  <div class="sidebar-content">
    <!-- Main navigation -->
    <div class="sidebar-category sidebar-category-visible">
      <div class="category-content no-padding">
        <ul class="navigation navigation-main navigation-accordion">
          <!-- Main -->
          {% set currentRoute = app.request.attributes.get('_route') %}
          <li{% if currentRoute == 'bdd_index' %} class="active"{% endif %}>
            <a href="{{ path('bdd_index') }}">
              <i class="icon-home4"></i> <span>{{ 'sidebar.index'|trans }}</span>
            </a>
          </li>
          <li{% if currentRoute == 'ranking_index' %} class="active"{% endif %}>
            <a href="{{ path('ranking_index') }}">
              <i class="icon-trophy2"></i> <span>{{ 'sidebar.ranking'|trans }}</span>
            </a>
          </li{% if currentRoute == 'review_list' %} class="active"{% endif %}>
          <li>
            <a href="{{ path('review_list') }}">
              <i class="icon-megaphone"></i> <span>{{ 'sidebar.review'|trans }}</span>
            </a>
          </li>
          <li{% if currentRoute == 'top_list' %} class="active"{% endif %}>
            <a href="{{ path('top_list') }}">
              <i class="icon-podium"></i> <span>{{ 'sidebar.top'|trans }}</span>
            </a>
          </li>
          <li{% if currentRoute == 'nearby_index' %} class="active"{% endif %}>
            <a href="{{ path('nearby_index') }}">
              <i class="icon-compass4"></i> <span>{{ 'sidebar.nearby'|trans }}</span>
            </a>
          </li>
          <li{% if currentRoute == 'user_list' %} class="active"{% endif %}>
            <a href="{{ path('user_list') }}">
              <i class="icon-users4"></i> <span>{{ 'sidebar.users'|trans }}</span>
            </a>
          </li>
          <li{% if currentRoute == 'map_index' %} class="active"{% endif %}>
            <a href="{{ path('map_index') }}">
              <i class="icon-location3"></i> <span>{{ 'sidebar.map'|trans }}</span>
            </a>
          </li>
          <li{% if currentRoute == 'default_contact' %} class="active"{% endif %}>
            <a href="{{ path('default_contact') }}">
              <i class="icon-mail5"></i> <span>{{ 'sidebar.contact'|trans }}</span>
            </a>
          </li>
          <li>
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
              <a href="{{ path('logout') }}">
                <i class="icon-switch2"></i> <span>{{ 'sidebar.logout'|trans }}</span>
              </a>
            {% else %}
              <a href="{{ path('login') }}">
                <i class="icon-key"></i> <span>{{ 'sidebar.login'|trans }}</span>
              </a>
            {% endif %}
          </li>
        </ul>
      </div>
    </div>
    <!-- /main navigation -->
  </div>
</div>
