{# Display profile picture or fallback picture #}
{% macro profilePicture(user, className) %}
    <img src="{{ pictures_cdn ~ '/profile-pictures/' ~ user.profilePicture|default('default_user.png') }}"
         class="{{ className|default('img-circle img-lg') }}"
         alt="{{ user.displayName }}">
{% endmacro %}

{# Display a coaster related date #}
{% macro displayDate(date) %}
    {% if date|date("dm") == "0101" %}
        {{ date|date("Y") }}
    {% else %}
        {{ date|format_datetime('short', 'none') }}
    {% endif %}
{% endmacro %}

{# Color magic for ratings - Legacy support #}
{% macro ratingColor(score) %}
    hsl({{ score * 1.2 }}, 50%, 50%)
{% endmacro %}

{# Display coaster rank variation #}
{% macro variation(coaster) %}
    {% if coaster.previousRank is empty %}
        <span class="badge badge-flat border-warning-600 text-warning-600">new</span>
    {% elseif coaster.previousRank < coaster.rank %}
        <span class="badge badge-flat border-danger-600 text-danger-600">
      {{ heroicon('arrow-down', 'w-6 h-6') }} {{ (coaster.rank - coaster.previousRank)|abs }}
    </span>
    {% elseif coaster.previousRank > coaster.rank %}
        <span class="badge badge-flat border-success-600 text-success-600">
      {{ heroicon('arrow-up', 'w-6 h-6') }} {{ (coaster.rank - coaster.previousRank)|abs }}
    </span>
    {% elseif coaster.previousRank == coaster.rank %}
        <span class="badge badge-flat border-primary-600 text-primary-600">{{ heroicon('arrow-right', 'w-6 h-6') }}</span>
    {% endif %}
{% endmacro %}

{# Display star rating #}
{% macro starRating(rating) %}
    <span class="star-rating">
        <span class="text-warning star-rating-stars">
            {% set fullStars = rating|round(0, 'floor') %}
            
            {% for i in 1..fullStars %}
                {{ heroicon('star', 'w-6 h-6', 'solid') }}
            {% endfor %}
            
            {% if (rating - fullStars) >= 0.5 %}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-6 h-6">
                    <defs>
                        <clipPath id="left-half"><rect x="0" y="0" width="12" height="24"/></clipPath>
                        <clipPath id="right-half"><rect x="12" y="0" width="12" height="24"/></clipPath>
                    </defs>
                    <path clip-path="url(#left-half)" fill="currentColor" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z"/>
                    <path clip-path="url(#right-half)" fill="none" stroke="currentColor" stroke-width="1.5" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.563.563 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z"/>
                </svg>
            {% endif %}
        </span>
    </span>
{% endmacro %}
