{% import "macros/_macros_helpers.html.twig" as helper %}

<ul class="space-y-3 mb-6">
    {% for coaster in coasters %}
        <li class="bg-white dark:bg-neutral-900 rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-200">
            <div class="p-4">
                <div class="flex gap-4 flex-col md:flex-row">
                    <div class="shrink-0">
                        <a href="{{ path('show_coaster', {'id': coaster.id, 'slug': coaster.slug}) }}" class="block rounded-lg overflow-hidden hover:opacity-90 transition-opacity duration-200">
                            {% if coaster.mainImage is not null %}
                                <img src="{{ pictures_cdn }}/96x96/{{ coaster.mainImage.filename }}"
                                     class="w-24 h-24 object-cover"
                                     alt="{{ coaster.name }}"
                                     loading="lazy">
                            {% else %}
                                <div class="w-24 h-24 bg-neutral-100 dark:bg-neutral-800 flex items-center justify-center rounded-lg">
                                    {{ ux_icon('tabler:photo', {'class': 'w-8 h-8 text-neutral-400', 'aria-hidden': 'true'}) }}
                                </div>
                            {% endif %}
                        </a>
                    </div>
                    <div class="flex-grow min-w-0">
                        <h2 class="text-lg font-semibold mb-2">
                            <a class="link hover:text-cc-blue-700 dark:hover:text-cc-blue-300" href="{{ path('show_coaster', {'id': coaster.id, 'slug': coaster.slug}) }}">
                                {% if not filtered %}
                                    {{ coaster.rank }}&nbsp;-&nbsp;{{ coaster.name }}
                                {% else %}
                                    {{ firstRank + loop.index0 }}&nbsp;-&nbsp;{{ coaster.name }} <span class="text-neutral-500 dark:text-neutral-400">(#{{ coaster.rank }})</span>
                                {% endif %}
                            </a>
                            {{ helper.variation(coaster) }}
                        </h2>
                        <div class="flex flex-wrap items-center gap-x-2 gap-y-1 text-neutral-600 dark:text-neutral-400 text-sm mb-1">
                            <a class="link hover:text-cc-blue-700 dark:hover:text-cc-blue-300" href="{{ path('park_show', {'id': coaster.park.id, 'slug': coaster.park.slug}) }}">
                                {{ coaster.park.name }}
                            </a>
                            <span class="text-neutral-300 dark:text-neutral-700">â€¢</span>
                            <span>{{ coaster.park.country.name|trans([], 'database') }}</span>
                        </div>
                        {% if coaster.manufacturer %}
                            <div class="text-neutral-600 dark:text-neutral-400 text-sm">
                                {{ coaster.manufacturer.name }}
                            </div>
                        {% endif %}
                    </div>
                    <div class="shrink-0 text-center self-center">
                        <div style="color: {{ helper.ratingColor(coaster.score) }};" class="text-3xl font-semibold whitespace-nowrap mb-1">
                            {{ coaster.score|number_format(1, ',') }}%
                        </div>
                        <span class="text-neutral-600 dark:text-neutral-400 text-sm whitespace-nowrap">
                            {{ 'coaster_ranking.duel_number'|trans({'count': coaster.validDuels}) }}
                        </span>
                    </div>
                </div>
            </div>
        </li>
    {% else %}
        <li class="bg-white dark:bg-neutral-900 rounded-xl overflow-hidden shadow-sm">
            <div class="empty-state">
                <div class="empty-state-icon">
                    {{ ux_icon('tabler:search', {'class': 'w-8 h-8 text-neutral-400', 'aria-hidden': 'true'}) }}
                </div>
                <p class="text-neutral-600 dark:text-neutral-400 text-lg font-medium">{{ 'coaster_ranking.no_results'|trans }}</p>
            </div>
        </li>
    {% endfor %}
</ul>
{{ knp_pagination_render(coasters) }}
