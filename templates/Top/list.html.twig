{% extends "base.html.twig" %}

{% import "helper.html.twig" as helper %}

{% set title = 'list.title'|trans({}, 'top') %}
{% block title %}{{ title }}{% endblock %}

{% block body %}
  <div class="row">
    {% for top in tops %}
      <div class="col-lg-4 col-sm-6">
        <div class="thumbnail">
          <div class="caption">
            <div class="content-group-sm media">
              <div class="media-left">
                {{ helper.profilePicture(top.user) }}
              </div>
              <div class="media-body">
                <h6 class="text-semibold no-margin">
                  {% if top.main %}{{ ux_icon('heroicons:check', {'class': 'w-6 h-6 text-size-mini position-left'}) }}{% endif %}
                  <a href="{{ path('top_show', {'id': top.id}) }}" class="text-default">
                    {{ top.name }}
                  </a>
                </h6>
                <small class="text-muted">
                  {{ 'list.by'|trans({}, 'top') }}
                  <a href="{{ path('user_show', {'slug': top.user.slug}) }}">
                    {{ top.user.displayName }}
                  </a>
                </small>
              </div>
            </div>
            <ul class="list-feed">
              {% for topCoaster in top.topCoasters|slice(0,3) %}
                <li>
                  {{ topCoaster.position }} -
                    <a href="{{ path('show_coaster', {'id': topCoaster.coaster.id, 'slug': topCoaster.coaster.slug}) }}"
                     class="text-default">
                    {{ topCoaster.coaster.name }}
                  </a>
                </li>
              {% endfor %}
            </ul>
            <div class="media">
              <a href="{{ path('top_show', {'id': top.id}) }}">
                {{ ux_icon('heroicons:arrow-right-circle', {'class': 'w-6 h-6'}) }} {{ 'list.more'|trans({}, 'top') }}
              </a>
            </div>
            <ul class="list-inline media">
              <li>{{ ux_icon('heroicons:square-3-stack-3d', {'class': 'w-6 h-6 position-left'}) }} {{ top.topCoasters|length }}</li>
              <li>
                {{ ux_icon('heroicons:clock', {'class': 'w-6 h-6 position-left'}) }} {{ 'list.updated'|trans({}, 'top') }} {{ top.updatedAt|ago }}
              </li>
            </ul>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
  {{ knp_pagination_render(tops) }}
{% endblock %}

