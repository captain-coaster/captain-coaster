{% extends "layouts/base.html.twig" %}

{% set hideTitle = true %}
{% block title %}{{ 'index.header.title'|trans }}{% endblock %}

{% block header %}
  <meta name="description" content="{{ 'index.description'|trans }}"/>
  <meta property="og:title" content="{{ 'app.name'|trans }}"/>
  <meta property="og:type" content="website"/>
  <meta property="og:url" content="{{ app.request.uri }}"/>
  <meta property="og:image" content="{{ absolute_url(asset('images/logo_big.png')) }}"/>
{% endblock %}

{% block body %}
  {# Hero: Featured coaster with full-bleed image #}
  {% if image %}
    <a href="{{ path('show_coaster', {'id': image.coaster.id, 'slug': image.coaster.slug}) }}" 
       class="block -mx-4 sm:-mx-6 lg:-mx-8 -mt-6 mb-6 relative">
      <div class="aspect-4/3 sm:aspect-21/9">
        <img src="{{ pictures_cdn }}/1200x630/{{ image.filename }}" 
             alt="{{ image.coaster.name }}"
             class="w-full h-full object-cover">
        <div class="absolute inset-0 bg-linear-to-t from-black/80 via-black/30 to-transparent"></div>
      </div>
      <div class="absolute bottom-0 left-0 right-0 p-4 sm:p-6">
        <h1 class="text-2xl sm:text-3xl font-bold text-white leading-tight">{{ image.coaster.name }}</h1>
        <p class="text-white/80 text-sm mt-1">{{ image.coaster.park.name }}</p>
      </div>
    </a>
  {% endif %}

  {# Quick actions for guests #}
  {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
    <div class="flex gap-3 mb-6 overflow-x-auto pb-2 -mx-4 px-4 sm:mx-0 sm:px-0 scrollbar-hide">
      <a href="{{ path('ranking_index') }}" class="flex-none flex items-center gap-2 px-4 py-3 rounded-xl bg-linear-to-r from-cc-blue-500 to-cc-blue-600 text-white text-sm font-medium shadow-lg shadow-cc-blue-500/25">
        {{ ux_icon('tabler:trophy', {'class': 'w-5 h-5', 'aria-hidden': 'true'}) }}
        {{ 'coaster_ranking.title'|trans }}
      </a>
      <a href="{{ path('map_index') }}" class="flex-none flex items-center gap-2 px-4 py-3 rounded-xl bg-neutral-100 dark:bg-neutral-800 text-neutral-900 dark:text-white text-sm font-medium">
        {{ ux_icon('tabler:map-pin', {'class': 'w-5 h-5 text-cc-warm-500', 'aria-hidden': 'true'}) }}
        {{ 'map_index.title'|trans }}
      </a>
      <a href="{{ path('login') }}" class="flex-none flex items-center gap-2 px-4 py-3 rounded-xl bg-neutral-100 dark:bg-neutral-800 text-neutral-900 dark:text-white text-sm font-medium">
        {{ ux_icon('tabler:user-plus', {'class': 'w-5 h-5 text-green-500', 'aria-hidden': 'true'}) }}
        {{ 'navbar.login'|trans({}, 'navigation') }}
      </a>
    </div>
  {% endif %}

  {# Stats bar #}
  <div class="flex items-center justify-between gap-4 p-3 mb-6 rounded-xl bg-neutral-100 dark:bg-neutral-800">
    <div class="flex items-center gap-3 text-sm">
      {{ ux_icon('tabler:star', {'class': 'w-5 h-5 text-cc-warm-500', 'aria-hidden': 'true'}) }}
      <span class="text-neutral-900 dark:text-white font-semibold">{{ stats.nb_ratings|number_format }}</span>
      <span class="text-neutral-500 dark:text-neutral-400">{{ 'index.stats.ratings'|trans }}</span>
    </div>
    {% if stats.nb_new_ratings > 0 %}
      <span class="text-xs font-medium text-green-600 dark:text-green-400 bg-green-100 dark:bg-green-900/30 px-2 py-1 rounded-full">+{{ stats.nb_new_ratings }}</span>
    {% endif %}
  </div>

  {# Recent activity: Horizontal scroll cards on mobile #}
  <section class="mb-8">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-lg font-semibold text-neutral-900 dark:text-white">{{ 'rating.last'|trans }}</h2>
    </div>
    
    <div class="flex gap-3 overflow-x-auto pb-4 -mx-4 px-4 sm:mx-0 sm:px-0 snap-x snap-mandatory scrollbar-hide sm:grid sm:grid-cols-2 lg:grid-cols-3 sm:overflow-visible">
      {% for rating in ratingFeed %}
        <article class="flex-none w-72 sm:w-auto snap-start rounded-2xl bg-neutral-50 dark:bg-neutral-800 overflow-hidden">
          <div class="p-4">
            <div class="flex items-center gap-3 mb-3">
              <a href="{{ path('user_show', {'slug': rating.user.slug}) }}">
                <img src="{{ pictures_cdn }}/profile-pictures/{{ rating.user.profilePicture|default('default_user.png') }}" 
                     alt=""
                     class="w-10 h-10 rounded-full object-cover ring-2 ring-white dark:ring-neutral-700">
              </a>
              <div class="min-w-0">
                <a href="{{ path('user_show', {'slug': rating.user.slug}) }}" 
                   class="block font-medium text-sm text-neutral-900 dark:text-white truncate hover:text-cc-blue-600 dark:hover:text-cc-blue-400">
                  {{ rating.user.displayName }}
                </a>
                <time datetime="{{ rating.updatedAt|date('c') }}" class="text-xs text-neutral-500">
                  {{ rating.updatedAt|ago }}
                </time>
              </div>
            </div>
            
            <a href="{{ path('show_coaster', {'id': rating.coaster.id, 'slug': rating.coaster.slug}) }}" class="block group">
              <h3 class="font-semibold text-neutral-900 dark:text-white group-hover:text-cc-blue-600 dark:group-hover:text-cc-blue-400 transition-colors">
                {{ rating.coaster.name }}
              </h3>
              <p class="text-sm text-neutral-500 dark:text-neutral-400 truncate">{{ rating.coaster.park.name }}</p>
            </a>
            
            <div class="flex items-center gap-2 mt-3 pt-3 border-t border-neutral-200 dark:border-neutral-700">
              <div class="flex">
                {% for i in 1..5 %}
                  {% if i <= rating.value %}
                    {{ ux_icon('tabler:star-filled', {'class': 'w-5 h-5 text-cc-warm-500', 'aria-hidden': 'true'}) }}
                  {% elseif i - 0.5 <= rating.value %}
                    {{ ux_icon('tabler:star-half-filled', {'class': 'w-5 h-5 text-cc-warm-500', 'aria-hidden': 'true'}) }}
                  {% else %}
                    {{ ux_icon('tabler:star', {'class': 'w-5 h-5 text-neutral-300 dark:text-neutral-600', 'aria-hidden': 'true'}) }}
                  {% endif %}
                {% endfor %}
              </div>
              <span class="text-lg font-bold text-neutral-900 dark:text-white">{{ rating.value }}</span>
            </div>
          </div>
        </article>
      {% endfor %}
    </div>
  </section>

  {# Reviews: Full-width cards with emphasis on content #}
  {% if reviews|length > 0 %}
    <section class="mb-8">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-semibold text-neutral-900 dark:text-white">{{ 'review.last'|trans }}</h2>
        <a href="{{ path('review_list') }}" class="text-sm text-cc-blue-600 dark:text-cc-blue-400 font-medium">
          {{ 'review.all'|trans }}
        </a>
      </div>

      <div class="space-y-4">
        {% for review in reviews %}
          <article class="rounded-2xl bg-neutral-50 dark:bg-neutral-800 p-4">
            <div class="flex items-start gap-3">
              <a href="{{ path('user_show', {'slug': review.user.slug}) }}" class="shrink-0">
                <img src="{{ pictures_cdn }}/profile-pictures/{{ review.user.profilePicture|default('default_user.png') }}" 
                     alt=""
                     class="w-12 h-12 rounded-full object-cover">
              </a>
              <div class="flex-1 min-w-0">
                <div class="flex items-start justify-between gap-2">
                  <div>
                    <a href="{{ path('user_show', {'slug': review.user.slug}) }}" 
                       class="font-medium text-neutral-900 dark:text-white hover:text-cc-blue-600 dark:hover:text-cc-blue-400">
                      {{ review.user.displayName }}
                    </a>
                    <p class="text-sm text-neutral-500 dark:text-neutral-400">
                      <a href="{{ path('show_coaster', {'id': review.coaster.id, 'slug': review.coaster.slug}) }}" 
                         class="hover:text-cc-blue-600 dark:hover:text-cc-blue-400">
                        {{ review.coaster.name }}
                      </a>
                    </p>
                  </div>
                  <div class="flex items-center gap-1 px-2 py-1 rounded-lg bg-cc-warm-100 dark:bg-cc-warm-900/30">
                    {{ ux_icon('tabler:star-filled', {'class': 'w-4 h-4 text-cc-warm-500', 'aria-hidden': 'true'}) }}
                    <span class="text-sm font-bold text-cc-warm-700 dark:text-cc-warm-400">{{ review.value }}</span>
                  </div>
                </div>

                {# Review text #}
                {% if review.review and (displayReviewsInAllLanguages or review.language == app.request.locale) %}
                  <p class="mt-3 text-neutral-700 dark:text-neutral-300 text-sm leading-relaxed">
                    "{{ review.review|length > 200 ? review.review|slice(0, 200) ~ 'â€¦' : review.review }}"
                  </p>
                {% endif %}

                {# Pros/Cons as pills #}
                {% if review.pros|length > 0 or review.cons|length > 0 %}
                  <div class="flex flex-wrap gap-2 mt-3">
                    {% for pro in review.pros|slice(0, 3) %}
                      <span class="inline-flex items-center gap-1 px-2 py-1 rounded-lg text-xs font-medium bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400">
                        {{ ux_icon('tabler:thumb-up', {'class': 'w-3 h-3', 'aria-hidden': 'true'}) }}
                        {{ pro.name|trans([], 'database') }}
                      </span>
                    {% endfor %}
                    {% for con in review.cons|slice(0, 2) %}
                      <span class="inline-flex items-center gap-1 px-2 py-1 rounded-lg text-xs font-medium bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-400">
                        {{ ux_icon('tabler:thumb-down', {'class': 'w-3 h-3', 'aria-hidden': 'true'}) }}
                        {{ con.name|trans([], 'database') }}
                      </span>
                    {% endfor %}
                  </div>
                {% endif %}

                <time datetime="{{ review.updatedAt|date('c') }}" class="block mt-3 text-xs text-neutral-400">
                  {{ review.updatedAt|ago }}
                </time>
              </div>
            </div>
          </article>
        {% endfor %}
      </div>
    </section>
  {% endif %}

  {# Community stats: Visual grid #}
  <section class="mb-8">
    <h2 class="text-lg font-semibold text-neutral-900 dark:text-white mb-4">{{ 'sidebar.users'|trans({}, 'navigation') }}</h2>
    <div class="grid grid-cols-2 gap-3">
      <a href="{{ path('user_list') }}" class="p-4 rounded-2xl bg-linear-to-br from-green-500 to-emerald-600 text-white">
        <div class="text-3xl font-bold">{{ stats.nb_users|number_format }}</div>
        <div class="text-sm text-white/80 mt-1">{{ 'index.stats.users'|trans }}</div>
      </a>
      <a href="{{ path('review_list') }}" class="p-4 rounded-2xl bg-linear-to-br from-cc-blue-500 to-indigo-600 text-white">
        <div class="text-3xl font-bold">{{ stats.nb_reviews|number_format }}</div>
        <div class="text-sm text-white/80 mt-1">{{ 'index.stats.reviews'|trans }}</div>
      </a>
    </div>
  </section>

  {# Contribute CTA for logged-in users #}
  {% if missingImages|length > 0 %}
    <section class="p-5 rounded-2xl bg-linear-to-r from-cc-warm-500 to-orange-500 text-white">
      <div class="flex items-start gap-4">
        <div class="p-3 rounded-xl bg-white/20">
          {{ ux_icon('tabler:camera', {'class': 'w-6 h-6', 'aria-hidden': 'true'}) }}
        </div>
        <div class="flex-1">
          <h3 class="font-semibold text-lg">{{ 'index.missingImages'|trans }}</h3>
          <div class="flex flex-wrap gap-2 mt-3">
            {% for coaster in missingImages|slice(0, 4) %}
              <a href="{{ path('coaster_images_upload', {'slug': coaster.slug}) }}" 
                 class="px-3 py-1.5 rounded-full text-sm font-medium bg-white/20 hover:bg-white/30 transition-colors">
                {{ coaster.name }}
              </a>
            {% endfor %}
          </div>
        </div>
      </div>
    </section>
  {% endif %}
{% endblock %}

{% block javascripts %}
  <script>
    if ('serviceWorker' in navigator) {
      navigator.serviceWorker.register('/sw.js', {scope: '/'}).then(function() {
        console.log('Service Worker Registered');
      }).catch(function(e) {
        console.log('Error during Service Worker registration : ', e);
      });
    }
  </script>
{% endblock %}
