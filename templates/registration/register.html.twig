{% extends "layouts/base_login.html.twig" %}

{% block title %}{{ 'register.title'|trans }} â€¢ {{ 'app.name'|trans }}{% endblock %}

{% block body %}
    <!-- Form with validation -->
    <div class="bg-white dark:bg-neutral-900 rounded-2xl shadow-sm overflow-hidden login-form">
        <div class="p-6">
            <div class="text-center mb-4">
                <div class="d-inline-flex items-center justify-content-center rounded-full bg-warning-subtle text-yellow-600 dark:text-yellow-400 mb-3 w-16 h-16">
                    {{ ux_icon('tabler:key', {'class': 'icon-md'}) }}
                </div>
                <h5 class="mb-1">{{ 'register.title'|trans }}</h5>
                <p class="text-neutral-600 dark:text-neutral-400 text-sm mb-0">{{ 'register.subtitle'|trans }}</p>
            </div>
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="p-4 rounded-lg border {% if label == 'success' %}bg-green-50 border-green-200 text-green-800{% elseif label == 'danger' or label == 'error' %}bg-red-50 border-red-200 text-red-800{% else %}bg-blue-50 border-blue-200 text-blue-800{% endif %} flex items-start justify-between gap-3">
                        <div class="flex-1">{{ message | raw }}</div>
                        <button type="button" class="p-1 rounded-lg hover:bg-black/5" onclick="this.parentElement.remove()" aria-label="Close">
                            {{ ux_icon('tabler:x', {'class': 'w-4 h-4'}) }}
                        </button>
                    </div>
                {% endfor %}
            {% endfor %}

            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.firstName) }}
            {{ form_row(registrationForm.lastName) }}
            {{ form_widget(registrationForm.recaptcha) }}

            {{ form_end(registrationForm) }}

            <p class="text-center text-neutral-600 dark:text-neutral-400 text-sm mb-0">
                {{ 'login.terms'|trans({'%link_path%': path('app_terms_conditions')})|raw }}
            </p>
        </div>
    </div>
    <!-- /form with validation -->
{% endblock %}
