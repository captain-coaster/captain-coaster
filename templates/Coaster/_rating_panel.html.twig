<!-- Rating Panel -->
<section class="bg-neutral-50 dark:bg-neutral-900 rounded-2xl overflow-hidden shadow-sm border-t-4 border-cc-blue-500 csrf-protection" 
     data-controller="csrf-protection rating-actions"
     data-csrf-protection-token-value="{{ csrf_token('rating') }}"
     data-rating-actions-csrf-protection-outlet=".csrf-protection"
     {% if rating %}data-rating-actions-rating-id-value="{{ rating.id }}"{% endif %}
     data-rating-actions-locale-value="{{ app.request.locale }}"
     data-rating-actions-rate-text-value="{{ 'coaster.rating.action'|trans }}"
     data-rating-actions-my-rating-text-value="{{ 'coaster.rating.my_rating'|trans }}">
    <div class="p-6 text-center">
        <h3 class="text-lg font-semibold text-neutral-900 dark:text-white mb-4" data-rating-actions-target="title">
            {{ rating ? 'coaster.rating.my_rating'|trans : 'coaster.rating.action'|trans }}
        </h3>
        
        {% if is_granted('ROLE_USER') %}
            <!-- Star Rating Widget -->
            {% include 'Coaster/_rating_widget.html.twig' with {'coaster': coaster, 'rating': rating} only %}
            
            <!-- Action Buttons -->
            <div class="flex items-center justify-center gap-4 mt-4">
                <a class="p-2 rounded-lg text-neutral-600 hover:text-cc-blue-600 hover:bg-cc-blue-50 dark:text-neutral-400 dark:hover:text-cc-blue-400 dark:hover:bg-cc-blue-900/20 transition-colors duration-200 relative focus:outline-none focus:ring-2 focus:ring-cc-blue-500 focus:ring-offset-2" 
                   href="{{ path('review_form', {'id': coaster.id}) }}"
                   title="{% if rating %}{{ 'coaster.rating.updatereview'|trans }}{% else %}{{ 'coaster.rating.sendreview'|trans }}{% endif %}">
                    {{ ux_icon('tabler:edit', {'class': 'w-6 h-6', 'aria-hidden': 'true'}) }}
                    {% if rating and rating.review %}
                        <span class="absolute -top-0.5 -right-0.5 w-2.5 h-2.5 bg-green-500 rounded-full border-2 border-white dark:border-neutral-900"></span>
                    {% endif %}
                </a>
                
                {% if user and not user.isAddTodayDateWhenRating %}
                <div class="relative"
                     data-controller="rating-date"
                     {% if rating %}data-rating-date-rating-id-value="{{ rating.id }}"{% endif %}
                     data-rating-date-update-url-value="{{ path('rating_edit', {'id': coaster.id }) }}"
                     data-rating-date-csrf-protection-outlet=".csrf-protection">
                    <a class="p-2 rounded-lg text-neutral-600 hover:text-cc-blue-600 hover:bg-cc-blue-50 dark:text-neutral-400 dark:hover:text-cc-blue-400 dark:hover:bg-cc-blue-900/20 transition-colors duration-200 relative focus:outline-none focus:ring-2 focus:ring-cc-blue-500 focus:ring-offset-2 {% if not rating %}hidden{% endif %}"
                       data-action="click->rating-date#toggleDatePicker"
                       href="#"
                       data-rating-date-target="calendarButton"
                       title="{% if rating and rating.riddenAt %}{{ 'coaster.rating.date.rode_on'|trans }} {{ rating.riddenAt|date('M j, Y') }} - {{ 'coaster.rating.date.click_to_change'|trans }}{% else %}{{ 'coaster.rating.date.set'|trans }}{% endif %}">
                        {{ ux_icon('tabler:calendar', {'class': 'w-6 h-6', 'aria-hidden': 'true'}) }}
                        {% if rating and rating.riddenAt %}
                            <span class="absolute -top-0.5 -right-0.5 w-2.5 h-2.5 bg-cc-blue-500 rounded-full border-2 border-white dark:border-neutral-900"></span>
                        {% endif %}
                    </a>
                    
                    <!-- Date Picker Popup -->
                    <div data-rating-date-target="dateContainer" 
                         class="absolute top-full left-1/2 -translate-x-1/2 mt-2 bg-white dark:bg-neutral-800 rounded-xl shadow-lg border border-neutral-200 dark:border-neutral-700 p-4 z-50 hidden">
                        <div class="space-y-3">
                            <label class="block text-sm font-medium text-neutral-700 dark:text-neutral-300">{{ 'coaster.rating.date.label'|trans }}</label>
                            <input type="date" 
                                   class="block w-full rounded-lg border-0 py-2 px-3 text-neutral-900 dark:text-white ring-1 ring-inset ring-neutral-300 dark:ring-neutral-600 focus:ring-2 focus:ring-cc-blue-500 dark:bg-neutral-700 text-sm"
                                   data-rating-date-target="dateInput"
                                   data-action="change->rating-date#dateChanged"
                                   {% if rating and rating.riddenAt %}value="{{ rating.riddenAt|date('Y-m-d') }}"{% endif %}
                                   max="{{ 'now'|date('Y-m-d') }}"
                                   aria-label="{{ 'coaster.rating.date.select'|trans }}">
                            <div class="flex gap-2">
                                <button type="button" 
                                        class="flex-1 px-3 py-1.5 text-xs font-medium text-cc-blue-600 hover:bg-cc-blue-50 dark:text-cc-blue-400 dark:hover:bg-cc-blue-900/20 rounded-lg transition-colors duration-200"
                                        data-action="click->rating-date#setToday">{{ 'Today'|trans }}</button>
                                <button type="button" 
                                        class="flex-1 px-3 py-1.5 text-xs font-medium text-neutral-600 hover:bg-neutral-100 dark:text-neutral-400 dark:hover:bg-neutral-700 rounded-lg transition-colors duration-200"
                                        data-action="click->rating-date#clearDate">{{ 'Clear'|trans }}</button>
                            </div>
                        </div>
                    </div>
                </div>
                {% endif %}
                
                <a class="p-2 rounded-lg text-neutral-600 hover:text-red-600 hover:bg-red-50 dark:text-neutral-400 dark:hover:text-red-400 dark:hover:bg-red-900/20 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 {% if not rating %}hidden{% endif %}" 
                   data-action="click->rating-actions#delete"
                   data-rating-actions-target="deleteButton"
                   href="#"
                   title="{{ 'coaster.rating.delete'|trans }}">
                    {{ ux_icon('tabler:trash', {'class': 'w-6 h-6', 'aria-hidden': 'true'}) }}
                </a>
            </div>
        {% else %}
            <p class="text-neutral-500 dark:text-neutral-400 text-sm mb-4">
                {{ 'coaster.rating.mustlogin'|trans }}
            </p>
            <a href="{{ path('login') }}" 
               class="inline-flex items-center px-4 py-2 bg-cc-blue-600 hover:bg-cc-blue-700 text-white text-sm font-medium rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-cc-blue-500 focus:ring-offset-2">
                {{ 'coaster.rating.login'|trans }}
            </a>
        {% endif %}
    </div>
</section>
<!-- /Rating Panel -->
