{% extends "base.html.twig" %}

{% import "helper.html.twig" as helper %}

{% set title = coaster.name %}
{% set subTitle = coaster.park.name %}
{% block title %}{{ title }} â€¢ {{ subTitle }}{% endblock %}
{% if coaster.formerNames %}
    {% set secondaryTitle = coaster.formerNames|join(', ') %}
{% endif %}

{# {% block header %} #}
    {# <meta name="description" content="{{ coaster.name }} is a {{ coaster.manufacturer.name }} roller coaster"/> #}
{# {% endblock %} #}

{% block body %}
    <div class="row">
        <div class="col-sm-3">
            {% if coaster.isRateable %}
                <!-- score -->
                {% if coaster.score %}
                    <div class="panel panel-body">
                        <div class="media no-margin">
                            <div class="media-left">
                                <i style="color: {{ helper.ratingColor(coaster.score) }};"
                                   class="icon-heart6 icon-3x"></i>
                            </div>
                            <div class="media-body text-right">
                                <h3 class="no-margin text-semibold text-right"
                                    style="color: {{ helper.ratingColor(coaster.score) }};">
                                    {{ 'coaster.score.scoreof'|trans }} {{ coaster.score|number_format(1, ',') }}%
                                </h3>
                                {% set perPage = constant('App\\Controller\\RankingController::COASTERS_PER_PAGE') %}
                                {% set page = (coaster.rank / perPage)|round(0, 'ceil') %}
                                <a href="{{ path('ranking_index', {'page': page}) }}" class="text-muted">
                                    {{ 'coaster.score.ranked'|trans }}
                                    <span class="badge badge-flat border-grey text-grey-600">#{{ coaster.rank }}</span>
                                    {{ 'coaster.score.intheworld'|trans }}
                                </a>
                            </div>
                            {% if coaster.mainTags|length > 0 %}
                                <p class="mt-20">
                                    {% for mainTag in coaster.mainTags %}
                                        {% if mainTag.tag.type == 'pro' %}
                                            <span
                                                class="label label-success label-rounded mt-10">{{ mainTag.tag.name|trans([], 'database') }}</span>
                                        {% else %}
                                            <span
                                                class="label label-danger label-rounded mt-10">{{ mainTag.tag.name|trans([], 'database') }}</span>
                                        {% endif %}
                                    {% endfor %}
                                </p>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}
                <!-- /score -->
                <!-- star rating -->
                <div class="panel panel-body border-top-primary text-center">
                    <h6 class="no-margin text-semibold">{{ 'coaster.rating.action'|trans }}</h6>
                    <br/>
                    {% if is_granted('ROLE_USER') %}
                        <!-- Centered rating stars -->
                        <div class="rating-coaster"
                             data-coaster="{{ coaster.id }}"
                             data-rateit-value="{{ rating.value|default(0) }}"
                             style="font-size: 26px;"></div>
                        <!-- Modern icon-based actions -->
                        <div class="rating-actions mt-10">
                        {% if rating %}
                            <!-- Update review icon -->
                            <a class="action-icon" 
                               href="{{ path('review_form', {'id': coaster.id}) }}"
                               title="{{ 'coaster.rating.updatereview'|trans }}">
                                <i class="icon-pencil3"></i>
                            </a>
                            
                            {% if user and not user.isAddTodayDateWhenRating %}
                                <!-- Date picker icon -->
                                <span 
                                    data-controller="rating-date"
                                    data-rating-date-coaster-id-value="{{ coaster.id }}"
                                    data-rating-date-current-date-value="{% if rating and rating.riddenAt %}{{ rating.riddenAt|date('Y-m-d') }}{% endif %}"
                                    data-rating-date-update-url-value="{{ path('rating_edit', {'id': coaster.id }) }}"
                                    class="inline-date-picker"
                                >
                                    <button type="button"
                                            class="action-icon date-trigger"
                                            data-action="click->rating-date#toggleDatePicker"
                                            data-rating-date-target="dateTrigger"
                                            title="{% if rating and rating.riddenAt %}Rode on {{ rating.riddenAt|date('M j, Y') }} - click to change{% else %}Set ride date{% endif %}">
                                        <i class="icon-calendar"></i>
                                        {% if rating and rating.riddenAt %}
                                            <span class="date-indicator"></span>
                                        {% endif %}
                                    </button>
                                    
                                    <!-- Compact date picker popup -->
                                    <div 
                                        data-rating-date-target="dateContainer" 
                                        class="date-picker-popup-inline" 
                                        style="display: none;"
                                    >
                                        <div class="date-picker-content-small">
                                            <input 
                                                type="date" 
                                                data-rating-date-target="dateInput"
                                                data-action="change->rating-date#dateChanged"
                                                class="small-date-input"
                                                max="{{ 'now'|date('Y-m-d') }}"
                                            >
                                            <div class="small-date-actions">
                                                <button 
                                                    type="button" 
                                                    class="tiny-btn today-btn"
                                                    data-action="click->rating-date#setToday"
                                                >
                                                    Today
                                                </button>
                                                <button 
                                                    type="button" 
                                                    class="tiny-btn clear-btn"
                                                    data-action="click->rating-date#clearDate"
                                                >
                                                    Clear
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </span>
                            {% endif %}
                            
                            <!-- Delete review icon -->
                            <a class="action-icon delete-icon" 
                               href="#"
                               onclick="deleteRating({{ rating.id }}); return false;"
                               title="{{ 'coaster.rating.delete'|trans }}">
                                <i class="icon-bin"></i>
                            </a>
                        {% else %}
                            <a class="action-icon"
                               href="{{ path('review_form', {'id': coaster.id}) }}"
                               title="{{ 'coaster.rating.sendreview'|trans }}">
                                <i class="icon-plus3"></i>
                            </a>
                            <div id="review-delete"></div>
                        {% endif %}
                        </div>
                    {% else %}
                        <p class="text-muted content-group-sm">
                            {{ 'coaster.rating.mustlogin'|trans }}
                        </p>
                        <a href="{{ path('login') }}">{{ 'coaster.rating.login'|trans }}</a>
                    {% endif %}
                </div>
                <!-- /star rating -->
            {% endif %}
            <!-- main carac -->
            <div class="content-group">
                <div class="row row-seamless btn-block-group">
                    <div class="col-xs-6">
                        <button type="button" class="btn btn-default btn-block btn-float btn-float-lg text-bold">
                            <i class="icon-arrow-up8 text-warning-600"></i>
                            {% if coaster.height is not empty %}
                                {{ units.m_or_f(coaster.height) }}
                            {% else %}
                                &nbsp;
                            {% endif %}
                        </button>
                        <button type="button" class="btn btn-default btn-block btn-float btn-float-lg text-bold">
                            <i class="icon-rocket text-success-400"></i>
                            {% if coaster.speed is not empty %}
                                {{ units.kph_or_mph(coaster.speed) }}
                            {% else %}
                                &nbsp;
                            {% endif %}
                        </button>
                    </div>
                    <div class="col-xs-6">
                        <button type="button" class="btn btn-default btn-block btn-float btn-float-lg text-bold">
                            <i class="icon-rulers text-blue"></i>
                            {% if coaster.length is not empty %}
                                {{ units.m_or_f(coaster.length) }}
                            {% else %}
                                &nbsp;
                            {% endif %}
                        </button>
                        <button type="button" class="btn btn-default btn-block btn-float btn-float-lg text-bold">
                            <i class="icon-spinner11 text-danger-400"></i>
                            {{ coaster.inversionsNumber|default('0') }}
                        </button>
                    </div>
                </div>
            </div>
            {% if countRatings %}
                <div class="panel panel-white">
                    <div class="panel-heading">
                        <h6>
                            {{ 'coaster.rating.details'|trans }}
                        </h6>
                    </div>
                    <div class="media-body" id="chart"></div>
                </div>
            {% endif %}
            <!-- /main carac -->
            <!-- coaster details -->
            <div class="panel panel-white">
                <div class="panel-heading">
                    <h6>
                        {{ 'coaster.infos.title'|trans({'%name%': coaster.name}) }}
                    </h6>
                </div>
                <div class="list-group no-border">
                    {% if coaster.status %}
                        <div class="list-group-item">
                            <label class="control-label no-margin text-semibold">{{ 'coaster.infos.status'|trans }}
                                :</label>
                            <div class="pull-right">
              <span class="label label-{{ coaster.status.type }} bg-{{ coaster.status.type }}">
                  {{ coaster.status.name|trans([], 'database') }}
              </span>
                            </div>
                        </div>
                    {% endif %}
                    {% if coaster.park %}
                        <div class="list-group-item">
                            <label class="control-label no-margin text-semibold">{{ 'coaster.infos.park'|trans }}
                                :</label>
                            <div class="pull-right">
                                <a href="{{ path('park_show', {'id': coaster.park.id, 'slug': coaster.park.slug}) }}">{{ coaster.park.name }}</a>
                            </div>
                        </div>
                    {% endif %}
                    {% if coaster.park.country %}
                        <div class="list-group-item">
                            <label class="control-label no-margin text-semibold">{{ 'coaster.infos.country'|trans }}
                                :</label>
                            <div class="pull-right">
                                <a href="{{ path('ranking_index', {'filters[country]': coaster.park.country.id}) }}">
                                    {{ coaster.park.country.name|trans([], 'database') }}</a>
                            </div>
                        </div>
                    {% endif %}
                    <div class="list-group-item">
                        <label class="control-label no-margin text-semibold">{{ 'coaster.infos.manufacturer'|trans }}
                            :</label>
                        <div class="pull-right">
                            {% if coaster.manufacturer %}
                                <a href="{{ path('ranking_index', {'filters[manufacturer]': coaster.manufacturer.id}) }}">
                                    {{ coaster.manufacturer.name }}</a>
                            {% else %}
                                <label>{{ 'data.unknown'|trans([], 'database') }}</label>
                            {% endif %}
                        </div>
                    </div>
                    {% if coaster.materialType %}
                        <div class="list-group-item">
                            <label
                                class="control-label no-margin text-semibold">{{ 'coaster.infos.materialType'|trans }}
                                :</label>
                            <div class="pull-right">
                                <a href="{{ path('ranking_index', {'filters[materialType]': coaster.materialType.id}) }}">
                                    {{ coaster.materialType.name }}</a>
                            </div>
                        </div>
                    {% endif %}
                    {% if coaster.seatingType %}
                        <div class="list-group-item">
                            <label class="control-label no-margin text-semibold">{{ 'coaster.infos.seatingType'|trans }}
                                :</label>
                            <div class="pull-right">
                                <a href="{{ path('ranking_index', {'filters[seatingType]': coaster.seatingType.id}) }}">
                                    {{ coaster.seatingType.name }}</a>
                            </div>
                        </div>
                    {% endif %}
                    {% if coaster.model %}
                        <div class="list-group-item">
                            <label class="control-label no-margin text-semibold">{{ 'coaster.infos.model'|trans }}
                                :</label>
                            <div class="pull-right">
                                <a href="{{ path('ranking_index', {'filters[model]': coaster.model.id}) }}">
                                    {{ coaster.model.name }}</a>
                            </div>
                        </div>
                    {% endif %}
                    {% if coaster.kiddie %}
                        <div class="list-group-item">
                            <label class="control-label no-margin text-semibold">{{ 'coaster.infos.kiddie'|trans }}
                                :</label>
                            <div class="pull-right"><i class="icon-checkmark3"></i></div>
                        </div>
                    {% endif %}
                    {% if coaster.launchs|length > 0 %}
                        <div class="list-group-item">
                            <label class="control-label no-margin text-semibold">{{ 'coaster.infos.launch'|trans }}
                                :</label>
                            <div class="pull-right">
                                {% for launch in coaster.launchs %}
                                    {{ launch|trans([], 'database') }}
                                    {% if not loop.last %}, {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}
                    <div class="list-group-item">
                        <label class="control-label no-margin text-semibold">{{ 'coaster.infos.restraint'|trans }}
                            :</label>
                        <div
                            class="pull-right">{{ coaster.restraint.name|default('data.unknown')|trans([], 'database') }}</div>
                    </div>
                    {% if coaster.openingDate %}
                        <div class="list-group-item">
                            <label class="control-label no-margin text-semibold">{{ 'coaster.infos.opening'|trans }}
                                :</label>
                            <div class="pull-right">
                                <a href="{{ path('ranking_index', {'filters[openingDate]': coaster.openingDate|date('Y') }) }}">
                                    {{ helper.displayDate(coaster.openingDate) }}</a>
                            </div>
                        </div>
                    {% endif %}
                    {% if coaster.closingDate %}
                        <div class="list-group-item">
                            <label class="control-label no-margin text-semibold">{{ 'coaster.infos.closing'|trans }}
                                :</label>
                            <div class="pull-right">
                                {{ helper.displayDate(coaster.closingDate) }}
                            </div>
                        </div>
                    {% endif %}
                    {% if coaster.indoor %}
                        <div class="list-group-item">
                            <label class="control-label no-margin text-semibold">{{ 'coaster.infos.indoor'|trans }}
                                :</label>
                            <div class="pull-right"><i class="icon-checkmark3"></i></div>
                        </div>
                    {% endif %}
                    {% if coaster.vr %}
                        <div class="list-group-item">
                            <label class="control-label no-margin text-semibold">{{ 'coaster.infos.vr'|trans }}:</label>
                            <div class="pull-right"><i class="icon-checkmark3"></i></div>
                        </div>
                    {% endif %}
                    {% if coaster.price and coaster.currency %}
                        <div class="list-group-item">
                            <label class="control-label no-margin text-semibold">{{ 'coaster.infos.cost'|trans }}
                                :</label>
                            <div class="pull-right">
                                {{ coaster.price|format_currency(coaster.currency, {fraction_digit: 0}) }}
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
            {% if coaster.youtubeId %}
            <div class="panel panel-white">
                <div class="panel-heading">
                    <h6>
                        {{ 'coaster.video.title'|trans }}
                    </h6>
                </div>
                <div class="media-yt-container">
                    <iframe width="560" height="315" src="https://www.youtube-nocookie.com/embed/{{ coaster.youtubeId }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                </div>
            </div>
            {% endif %}
            <!-- /coaster details -->
            <!-- coasters in park -->
            <div class="panel panel-white">
                <div class="panel-heading">
                    <h6>
                        {{ 'coaster.parkcoaster'|trans({'%name%': coaster.park.name}) }}
                        &nbsp;<span class="badge badge-primary">{{ coaster.park.coasters|length }}</span>
                    </h6>
                </div>
                <div class="list-group no-border">
                    {% for otherCoaster in coasters %}
                        <div class="list-group-item">
                            <span class="status-mark border-{{ otherCoaster.status.type }} position-left"></span>
                            <a href="{{ path('show_coaster', {'id': otherCoaster.id, 'slug': otherCoaster.slug}) }}">
                                {{ otherCoaster.name }}
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <!-- /coasters in park -->
            <!-- coaster location -->
            <!-- removed until open street maps -->
            <!-- /coaster location -->
        </div>
        <div class="col-sm-9">
            <!-- AI Summary Section (loaded via AJAX) -->
            <div id="coaster-ai-summary" class="row mb-15">
                <div class="panel panel-flat ai-summary-loading">
                    <div class="panel-heading">
                        <h6 class="panel-title">
                            <span class="text-semibold">
                                <i class="icon-star-full2 position-left"></i> Captain's Review
                            </span>
                        </h6>
                    </div>
                    <div class="panel-body text-center">
                        <i class="icon-spinner2 spinner text-muted"></i>
                        <span class="text-muted ml-5">Loading AI summary...</span>
                    </div>
                </div>
            </div>
            
            <!-- Photos Section (loaded via AJAX with Stimulus) -->
            <div 
                data-controller="coaster-images"
                data-coaster-images-slug-value="{{ coaster.slug }}"
                data-coaster-images-locale-value="{{ app.request.locale }}"
                data-coaster-images-total-images-value="{{ coaster.images|length }}"
            >
                <div id="coaster-photos" class="row" data-coaster-images-target="container">
                    <div class="panel panel-flat photos-loading">
                        <div class="panel-heading">
                            <h6 class="panel-title">
                                <span class="text-semibold">
                                    <i class="icon-images2 position-left"></i> Photos
                                </span>
                            </h6>
                        </div>
                        <div class="panel-body text-center">
                            <i class="icon-spinner2 spinner text-muted"></i>
                            <span class="text-muted ml-5">Loading photos...</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Reviews Section (loaded via AJAX with Stimulus) -->
            <div 
                data-controller="coaster-reviews"
                data-coaster-reviews-slug-value="{{ coaster.slug }}"
                data-coaster-reviews-locale-value="{{ app.request.locale }}"
            >
                <div id="coaster-reviews" class="row" data-coaster-reviews-target="container">
                    <div class="panel panel-flat reviews-loading">
                        <div class="panel-heading">
                            <h6 class="panel-title">
                                <span class="text-semibold">
                                    <i class="icon-bubbles4 position-left"></i> Reviews
                                </span>
                            </h6>
                        </div>
                        <div class="panel-body text-center">
                            <i class="icon-spinner2 spinner text-muted"></i>
                            <span class="text-muted ml-5">Loading reviews...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block page_scripts %}
    {# Load coaster-specific Webpack entry point BEFORE inline scripts #}
    {{ encore_entry_script_tags('coaster') }}
{% endblock %}



{% block javascripts %}

    <script src="{{ asset('js/pages/rating.js') }}"></script>

    <script type="text/javascript">
        // Modern rating system - old datepicker code removed
        // Date picking is now handled by Stimulus rating-date controller
    </script>
    {# Image loading now handled by Stimulus coaster-images controller #}
    <script type="text/javascript">
        var loadSummary = function () {
            $.ajax({
                url: Routing.generate('coaster_summary_ajax_load', {
                    'slug': '{{ coaster.slug }}',
                    '_locale': '{{ app.request.locale }}',
                }),
                type: 'GET',
            }).done(function (data) {
                $('#coaster-ai-summary').html(data);
            }).fail(function () {
                // Hide the summary section if it fails to load
                $('#coaster-ai-summary').hide();
            });
        };

        loadSummary();
        // Image loading now handled by Stimulus coaster-images controller
        // Reviews loading now handled by Stimulus coaster-reviews controller

        {% if countRatings %}
        var options = {
            series: [
                {% for countRating in countRatings %}
                {
                    name: {{ countRating.value }},
                    data: [{{ countRating.count }}]
                },
                {% endfor %}
            ],
            dataLabels: {
                enabled: false
            },
            colors: [function ({seriesIndex, w}) {
                switch (w.globals.seriesNames[seriesIndex]) {
                    case 5:
                        return '#40bf40';
                    case 4.5:
                        return '#6ab31f';
                    case 4:
                        return '#84a600';
                    case 3.5:
                        return '#999800';
                    case 3:
                        return '#a98a00';
                    case 2.5:
                        return '#b57b00';
                    case 2:
                        return '#bd6b09';
                    case 1.5:
                        return '#c25c20';
                    case 1:
                        return '#c24d31';
                    case 0.5:
                        return '#bf4040';
                }
            }],
            chart: {
                type: 'bar',
                toolbar: {
                    show: false
                },
                height: 100,
                stacked: true,
                stackType: '100%'
            },
            plotOptions: {
                bar: {
                    horizontal: true,
                    barHeight: '100%'
                },
            },
            stroke: {
                width: 0
            },
            xaxis: {
                categories: [''],
                labels: {
                    formatter: function (value, timestamp, opts) {
                        return value + "%";
                    }
                }
            },
            yaxis: {
                labels: {
                    show: false
                }
            },
            tooltip: {
                y: {
                    formatter: function (val, {series, seriesIndex, w}) {
                        var value = Math.floor(w.globals.seriesPercent[seriesIndex][0] * 100) / 100;
                        return value + "% (" + val + " {{ 'coaster.rating.ratings'|trans }})";
                    }
                }
            },
            fill: {
                opacity: 1

            },
            legend: {
                show: false
            }
        };

        // Wait for ApexCharts to be loaded by webpack
        function createChart() {
            if (typeof window.ApexCharts !== 'undefined') {
                var chart = new ApexCharts(document.querySelector("#chart"), options);
                chart.render();
            } else {
                // Wait for ApexCharts to be ready
                window.addEventListener('apexcharts-ready', function() {
                    var chart = new ApexCharts(document.querySelector("#chart"), options);
                    chart.render();
                });
            }
        }
        
        createChart();
        {% endif %}
    </script>
    {% include 'Coaster/rating-json-ld.html.twig' with {'coaster': coaster} only %}
{% endblock %}

{% block stylesheets %}
    {# Load coaster-specific CSS #}
    {{ encore_entry_link_tags('coaster') }}
    

    <style>
        /* Summary feedback button styles */
        .summary-feedback-buttons .btn {
            border-width: 1px;
            font-size: 11px;
            padding: 4px 8px;
            min-width: 40px;
        }
        
        .summary-feedback-buttons .btn.loading {
            opacity: 0.6;
            cursor: not-allowed;
        }
        
        .summary-feedback-buttons .btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }
        
        .summary-feedback-buttons .btn.active {
            border-width: 2px;
        }
        
        .summary-feedback-buttons .spinner {
            animation: spin 1s linear infinite;
        }
        
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        .summary-feedback-section {
            border-top: 1px solid #eee;
            margin-top: 15px;
            padding-top: 15px;
        }
        
        .ai-summary-loading,
        .photos-loading,
        .reviews-loading {
            animation: pulse 1.5s ease-in-out infinite alternate;
        }
        
        @keyframes pulse {
            0% { opacity: 1; }
            100% { opacity: 0.7; }
        }
        
        /* Placeholder panel styling */
        .ai-summary-loading .panel-body,
        .photos-loading .panel-body,
        .reviews-loading .panel-body {
            padding: 30px 20px;
            background: #fafafa;
        }
        
        @media (max-width: 768px) {
            .summary-feedback-section .col-md-4 {
                text-align: left !important;
                margin-top: 10px;
            }
        }
        
        /* Modern Icon Actions */
        .rating-actions {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 15px;
        }
        
        .action-icon {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background: rgba(0,0,0,0.05);
            color: #666;
            text-decoration: none;
            transition: all 0.2s ease;
            border: none;
            cursor: pointer;
            position: relative;
        }
        
        .action-icon:hover {
            background: rgba(0,123,255,0.1);
            color: #007bff;
            transform: scale(1.1);
            text-decoration: none;
        }
        
        .action-icon.delete-icon:hover {
            background: rgba(220,53,69,0.1);
            color: #dc3545;
        }
        
        .action-icon i {
            font-size: 14px;
        }
        
        /* Date indicator dot */
        .date-indicator {
            position: absolute;
            top: 4px;
            right: 4px;
            width: 6px;
            height: 6px;
            background: #28a745;
            border-radius: 50%;
